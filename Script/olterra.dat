/* Numeric olterrain data loaded during game startup */

/* Default values: */

olterrain
{
	/* Obligatory: BitmapPos */
	Article = "a";
	Adjective = "";
	AdjectiveArticle = "a";
	/* Obligatory: NameSingular */
	/* NameSingular + "s" by default: NamePlural */
	PostFix = "";
	ArticleMode = NORMALARTICLE;
	/* Obligatory: MainMaterialConfig */
	/* Obligatory: SecondaryMaterialConfig */
	/* Obligatory: ContainedMaterialConfig */
	/* Obligatory if multiple material configurations defined: MaterialConfigChances */
	IsAbstract = true; /* This is false by default and does not inherit! */
	OKVisualEffects = NONE;
	MaterialColorB = 0;
	MaterialColorC = 0;
	MaterialColorD = 0;
	SitMessage = "You sit for some time. Nothing happens.";
	/* Obligatory: DigMessage */
	CanBeDug = false;
	IsSafeToDestroy = false;
	RestModifier = 1;
	RestMessage = "";
	DefaultMainVolume = 10000000;
	DefaultSecondaryVolume = 0;
	DefaultContainedVolume = 0;
	ShowMaterial = true;
}

wall
{
	IsAbstract = true;
	CanBeDug = true;

	Config BRICK_FINE;
	{
		DigMessage = "The wall is pretty hard, but you still manage to go through it.";
		MainMaterialConfig == STONE;
		NameSingular = "wall";
		BitmapPos = 64, 272;
	}

	Config BRICK_OLD;
	{
		DigMessage = "The wall is pretty hard, but you still manage to go through it.";
		MainMaterialConfig == STONE;
		NameSingular = "wall";
		BitmapPos = 16, 256;
	}

	Config EARTH;
	{
		OKVisualEffects = MIRROR|FLIP|ROTATE;
		DigMessage = "The ground is fairly easy to dig.";
		MainMaterialConfig == MORAINE;
		MaterialColorB = rgb(56, 56, 56);
		Article = "an";
		NameSingular = "earth";
		BitmapPos = 0, 336;
	}
}

