empty /* olterrain-> */
{
	DigMessage = "The square you are trying to dig is empty.";
	IsSafeToDestroy = true;
	MainMaterialConfig == AIR;
	NameSingular = "";
	BitmapPos = 0, 480;
}

door /* olterrain-> */
{
	DigMessage = "You break the door.";
	CanBeDug = true;
	MainMaterialConfig == STONE;
	NameSingular = "door";
	/* BitmapPos depends on being open or not */
	/* PostFix depends on LockType */
}

stairsup /* olterrain-> */
{
	DigMessage = "The stairs are too hard to dig.";
	MainMaterialConfig == STONE;
	MaterialColorB = rgb(160, 64, 0);
	NameSingular = "stairway";
	PostFix = "upwards";
	BitmapPos = 0, 192;
}

stairsdown /* olterrain-> */
{
	DigMessage = "The stairs are too hard to dig.";
	MainMaterialConfig == STONE;
	MaterialColorB = rgb(160, 64, 0);
	NameSingular = "stairway";
	PostFix = "downwards";
	BitmapPos = 0, 208;
}

altar /* olterrain-> */
{
	DigMessage = "An invisible wall stops your feeble attempt.";
	MainMaterialConfig == STONE;
	Article = "an";
	NameSingular = "altar";
	BitmapPos = 0, 368;
	/* PostFix depends on Config */
	CreateDivineConfigurations = true;
}

throne /* olterrain-> */
{
	DigMessage = "The throne resists.";
	MainMaterialConfig == GOLD;
	MaterialColorB = rgb(200, 200, 0);
	NameSingular = "throne";
	BitmapPos = 0, 416;
}

container /* olterrain->furniture-> */
{
	IsAbstract = true;

	Config BOOKCASE;
	{
		CanBeDug = true;
		DigMessage = "You smash the bookcase into pieces.";
		MainMaterialConfig == WOOD;
		NameSingular = "bookcase";
		BitmapPos = 16, 272;
		SitMessage = "The bookcase is very unconfortable to sit on.";
	}
}

fountain /* olterrain-> */
{
	DigMessage = "The water splashes a bit."; /* Wrong if ContainedMaterial != WATER. */
	MainMaterialConfig == MARBLE;
	ContainedMaterialConfig == WATER;
	DefaultContainedVolume = 10000;
	/* Uses ContainerPostFix() */
	/* Adjective depends on being dried out or not */
	NameSingular = "fountain";
	/* BitmapPos depends on being dried out or not */
}

brokendoor /* olterrain->door-> */
{
	DigMessage = "You destroy the broken door.";
	Adjective = "broken";
	/* BitmapPos depends on being open or not */
}
